{
  "name": "ant-colony-defense",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:worker",
    "prebuild": "npm run lint && npm run typecheck",
    "build:worker": "echo 'Worker uses static assets from dist/'",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "npm run test:e2e",
    "test:e2e": "playwright test",
    "test:screenshot": "node scripts/capture-screenshots.js",
    "test:post-deploy": "node scripts/post-deploy-tests.js",
    "deploy": "node scripts/deploy-complete.js",
    "predeploy": "npm run version:bump:minor && npm run build",
    "version:bump:minor": "node scripts/version-bump.js minor",
    "version:bump:patch": "node scripts/version-bump.js patch"
  },
  "dependencies": {
    "lucide-react": "^0.424.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "wrangler": "^3.114.11"
  }
}

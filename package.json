{
  "name": "ant-colony-defense",
  "private": true,
  "version": "1.14.1",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-and-deploy.js",
    "build": "vite build && npm run build:worker",
    "prebuild": "npm run lint && npm run typecheck",
    "build:worker": "echo 'Worker uses static assets from dist/'",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:full": "playwright test tests/full-game-play.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:screenshot": "node scripts/capture-screenshots.js",
    "test:post-deploy": "node scripts/post-deploy-tests.js && node scripts/post-deploy-e2e.js",
    "deploy": "node scripts/deploy-complete.js",
    "predeploy": "npm run version:bump:minor && npm run build",
    "postdeploy": "node scripts/verify-deployment.js",
    "deploy:major": "npm run version:bump:major && npm run build && npm run deploy",
    "deploy:minor": "npm run version:bump:minor && npm run build && npm run deploy",
    "deploy:patch": "npm run version:bump:patch && npm run build && npm run deploy",
    "version:bump:major": "node scripts/version-bump.js major",
    "version:bump:minor": "node scripts/version-bump.js minor",
    "version:bump:patch": "node scripts/version-bump.js patch"
  },
  "dependencies": {
    "lucide-react": "^0.424.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "http-proxy-middleware": "^3.0.5",
    "jsdom": "^26.1.0",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "wrangler": "^3.114.11"
  }
}
